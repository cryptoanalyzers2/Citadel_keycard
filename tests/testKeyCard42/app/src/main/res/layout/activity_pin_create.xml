<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".PINCreateActivity">


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"> <!-- stretch the second column of the layout-->

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#99EE82EE"
            android:text="  Create a 6-digits Passcode (PIN)"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="15dp" />
        <TableRow

            android:id="@+id/firstRow40"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/star_PIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#99000000"
            android:text=""
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="15dp" />

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <Button
                android:id="@+id/button_pin_1"
                android:onClick="pin_1"
                android:text="1"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_2"
                android:onClick="pin_2"
                android:text="2"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_3"
                android:onClick="pin_3"
                android:text="3"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

        </TableRow>

        <TableRow

            android:id="@+id/firstRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <Button
                android:id="@+id/button_pin_4"
                android:onClick="pin_4"
                android:text="4"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_5"
                android:onClick="pin_5"
                android:text="5"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_6"
                android:onClick="pin_6"
                android:text="6"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

        </TableRow>

        <TableRow

            android:id="@+id/firstRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <Button
                android:id="@+id/button_pin_7"
                android:onClick="pin_7"
                android:text="7"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_8"
                android:onClick="pin_8"
                android:text="8"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_9"
                android:onClick="pin_9"
                android:text="9"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

        </TableRow>

        <TableRow

            android:id="@+id/firstRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <Button
                android:id="@+id/button_pin_0"
                android:onClick="pin_0"
                android:text="0"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />

            <Button
                android:id="@+id/button_pin_D"
                android:onClick="pin_D"
                android:text="X"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />


        </TableRow>
        <Switch
            android:id="@+id/switch_PIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:textColor="#99EE82EE"
            android:text="Automatically generate PIN"
            android:textSize="25dp"
            android:checked="true"
            android:textOff="OFF"
            android:textOn="ON"/>

        <TableRow

            android:id="@+id/firstRow10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <!-- first element of the row-->
        <Button
            android:id="@+id/button_pin_OK"
            android:onClick="next"
            android:text=">"
            android:enabled="true"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintVertical_bias="0.023" />
        </TableRow>

    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>