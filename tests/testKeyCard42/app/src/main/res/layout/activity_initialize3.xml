<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitializeActivity_">

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="*"> <!-- stretch the second column of the layout-->

    <!-- first row of the table layout-->
    <TableRow

        android:id="@+id/firstRow0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#99EE82EE"
        android:text=" Write codes down and store them securely"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="15dp" />

    </TableRow>
        <TableRow

            android:id="@+id/firstRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99000000"
                android:text=" PUK:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="15dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#660000EE"
                android:text="7667 4728 5678"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="15dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99000000"
                android:text=" Pairing Code:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="15dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#660000EE"
                android:text="wedsedfgvbgth"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="15dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#660000EE"
                android:text="I confirm that I store the codes"
                android:checked="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="15dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <Button
                android:id="@+id/button_codes_OK"
                android:onClick="next"
                android:text="initialize card"
                android:enabled="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxWidth="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintVertical_bias="0.023" />
        </TableRow>
    </TableLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>