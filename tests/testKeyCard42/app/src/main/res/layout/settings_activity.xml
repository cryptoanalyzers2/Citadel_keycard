<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/lbl_netcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NetCardChannel"
           />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/cb_netcard"
                android:text="Use NetCardChannel"
                android:checked="true"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/lbl_netcard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NetCardChannel Hostname/IP"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/txt_netcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="10.0.2.2"
                android:background="#44121233" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/lbl_netcard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NetCardChannel Port"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/txt_netcard_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="38099"
                android:background="#44121233" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </FrameLayout>
</LinearLayout>