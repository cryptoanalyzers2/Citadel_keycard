<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeedActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TableLayout
        android:id="@+id/simpleTableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="*"> <!-- stretch the second column of the layout-->

    <!-- first row of the table layout-->
    <TableRow

        android:id="@+id/firstRow0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#99EE82EE"
            android:text="Note the Mnemonic phrase"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="15dp" />

    </TableRow>

    <TableRow

        android:id="@+id/firstRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_seed1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="#990000EE"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>

        <TableRow

            android:id="@+id/firstRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/text_seed2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#990000EE"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        </TableRow>
        <TableRow

            android:id="@+id/firstRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/text_seed3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#990000EE"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        </TableRow>
        <TableRow

            android:id="@+id/firstRow44"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/text_seed4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#990000EE"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />
        </TableRow>
        <TableRow

            android:id="@+id/firstRow21"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#660000EE"
                android:text="I confirm that I stored a copy of the seed phrase and that I understand the seed phrase will no longer be available after I click on 'continue'"
                android:checked="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#66EE00"
                android:text="I HAVE STORED THE MNEMONIC PHRASE"
                android:checked="false"
                android:onClick="agree"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </TableRow>
        <TableRow

            android:id="@+id/firstRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <Button
                android:id="@+id/button_codes_OK"
                android:onClick="next"
                android:text="continue"
                android:enabled="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxWidth="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>